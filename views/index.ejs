<!DOCTYPE html>
<html lang="ja">
  <%- partial('part_header', { title: 'CTF Login' }) %>
  <body>

    <%- partial('part_navbar') %>

    <div class="jumbotron">
      <div class="container">
        <div class="columns">

          <div class="col-xs-8">
            <h1 class="display-heading-1 jumbotron-title">Lorem ipsum</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
          </div>

          <div class="col-xs-4">
            <form style="max-width:340px">
              <div class="form-group">
                <label for="inputUsername">ユーザー名</label>
                <input type="username" class="form-control" id="inputUsername" placeholder="Username" style="width: 300px">
              </div>
              <div class="form-group">
